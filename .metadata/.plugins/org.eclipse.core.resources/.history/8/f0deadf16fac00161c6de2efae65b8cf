		dbwindow.add(labelResultsco);
		dbwindow.add(clickresult);
		dbwindow.add(restart);
		dbwindow.add(showresult);
		
		add(p1, BorderLayout.NORTH);
		add(p2, BorderLayout.CENTER);
		p2.setVisible(false);
		setSize(600,700);
		setVisible(true);    
	}


