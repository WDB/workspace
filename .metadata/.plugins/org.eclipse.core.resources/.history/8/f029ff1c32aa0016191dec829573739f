import java.sql.*;

public class WDB{
	public static void main(String args[]){
		Connection conn = makeconnection();
		try {
			Statement stmt = conn.createStatement();
			String sql = "select * from books";
			ResultSet rs = stmt.executeQuery(sql);
			while(rs.next()){
				System.out.println(rs.getInt("book_id"));
				System.out.println(rs.getString("title"));
				System.out.println(rs.getString("publisher"));
				System.out.println(rs.getString("year"));
				System.out.println(rs.getInt("price")+"\n");
				
			}
			rs.close();
			stmt.close();
			conn.close();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

	private static Connection makeconnection() {
		// TODO Auto-generated method stub
		Connection conn = null;
		  // 드라이버 로딩
		  try {
		   Class.forName("oracle.jdbc.driver.OracleDriver");
		  } catch (ClassNotFoundException e) {
		   System.out.println("예외발생: 클래스를 발견할 수 없네요");
		   return null;
		   //e.printStackTrace();
		  }
		  System.out.println("클래스 로딩 성공");
		  // 데이터베이스 연결
		  String url = "jdbc:oracle:thin:@192.168.25.2:1521:orcl";
		  String id = "hrm";
		  String pw = "hrm";
		  try {
		   conn = DriverManager.getConnection(url, id, pw);
		  } catch (SQLException e) {
		   System.out.println("예외발생: getConnection 에러");
		   e.printStackTrace();
		   return null;
		  }
		  System.out.println("데이터베이스 연결 성공");
		  return conn;
	}
}