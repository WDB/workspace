import java.awt.*;
import javax.swing.*;
import java.awt.event.*;

class myframe extends JFrame implements ActionListener{
	JPanel p1,p2,p3;
	JLabel l1;
	JTextField tf1;
	JButton b1;
	int v;
	String name;
	public myframe(){
		setTitle("그림맞추기게임");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setSize(180,200);
		
		p1 = new JPanel();
		
		l1 = new JLabel("이름을 입력하세요");
		
		tf1 = new JTextField(10);
		
		b1 = new JButton("게임 시작");
	
		b1.addActionListener(this);
		p1.add(l1);
		p1.add(tf1);
		
		p1.add(b1);
		add(p1);
		
		p2 = new JPanel();
		p2.setLayout(new GridLayout(0,3));
		for(int i = 0;i<15;i++){
			p2.add(new JButton("버튼"+i));
		}
		p2.setVisible(false);
		setVisible(true);
	}
	@Override
	public void actionPerformed(ActionEvent arg0) {
		// TODO Auto-generated method stub
		if(tf1.getText() == null && tf1.getText().equals(" ")){
			JFrame e = new JFrame("ege");
			JLabel l = new JLabel("이름을 입력합시다.");
			e.add(l);
			e.setSize(100, 200);
			e.setVisible(true);
		}
		else{
			System.out.println("버튼이 클릭됨");
			p1.setVisible(false);
			name = tf1.getText();
			this.setSize(500,200);
			System.out.println(name);
			p2.setVisible(true);
			add(p2);
		}
	}
}

public class WDB{
	public static void main(String args[]){
		new myframe();
	}
}